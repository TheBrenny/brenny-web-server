{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "-LLLL",
        "${input:gulpTask}"
      ],
      "name": "Gulp task",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "args": [
        "-LLLL",
        "dev"
      ],
      "name": "dev",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Demo",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start"
      ],
      "env": {
        "NODE_ENV": "dev",
        "DEMO_MODE": "true"
      },
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Test All",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "testDebug"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Test Current FIle",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "testDebug"
      ],
      "args": [
        "tests/${fileBasename}"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
  ],
  "inputs": [
    {
      "id": "gulpTask",
      "type": "promptString",
      "description": "Gulp task to debug"
    }
  ]
}